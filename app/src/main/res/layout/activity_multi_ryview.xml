<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers"/>
        <import type="me.goldze.mvvmhabit.binding.viewadapter.recyclerview.LineManagers"/>
        <variable
                name="viewModel"
                type="com.example.mvvmapp.ui.recycleview.multi.MultiRyViewModel" />
        <variable
            name="adapter"
            type="me.tatarka.bindingcollectionadapter2.BindingRecyclerViewAdapter" />
    </data>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="@{LayoutManagers.linear()}"
            app:lineManager="@{LineManagers.horizontal()}"
            app:itemBinding="@{viewModel.itemBinding1}"
            app:items="@{viewModel.arrayListOb}"
            />

    </LinearLayout>


</layout>